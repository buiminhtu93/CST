<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:weightSum="1">


    <ImageView
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:id="@+id/imageView"
        android:background="@drawable/people_icon"
        android:layout_margin="@dimen/margin_title"
        />
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_title"
        android:layout_marginBottom="@dimen/margin_title"
        android:orientation="vertical"
        android:layout_weight="0.9">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Large Text"
            android:id="@+id/textViewNameParagraph"
            android:textColor="@color/color_text_title"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="Small Text"
            android:textColor="@color/color_text_description"
            android:id="@+id/textViewDetailParagraph" />
    </LinearLayout>

    <ImageButton
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:id="@+id/imageButtonShowDialogParagraph"
        android:background="@drawable/forward_icon"
        android:layout_margin="@dimen/margin_title"
        android:layout_gravity="center_vertical"
        />
</LinearLayout>