<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.application.cst.speakwithme" >

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/Theme.AppCompat.NoActionBar" >
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".Activity_Dialog_Panagraph"
            android:label="@string/text_title_dialog_panagraph"
            android:theme="@android:style/Theme.Holo.Dialog"/>
        <activity android:name=".Activity_Paragraph_Dialog_Insert"
            android:label="@string/text_title_dialog_panagraph"
            android:theme="@android:style/Theme.Holo.Dialog"/>
        <activity android:name=".Activity_Detail"/>
        <activity android:name=".Activity_Detail_Dialog"
            android:label="@string/text_title_dialog_detail"
            android:theme="@android:style/Theme.Holo.Dialog"/>
        <activity android:name=".Activity_Detail_Play"/>
        <activity android:name=".Activity_Setting"/>
        <activity android:name=".Activity_Text_to_Speech"/>
        <activity android:name=".Activity_Template"/>
    </application>


</manifest>
